@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="fs-lg fw-medium mt-3">Log In</div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <div class="fs-lg fw-medium mt-3">Or try out Issue Tracker with a demo account</div>
            <hr />

            <div class="mb-1 text-center">
                <form class="" id="account" method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-8 btn-block">
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-5 m-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-5 m-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-5 m-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-5 m-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
