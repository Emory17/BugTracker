@model BugTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="box p-3 mt-5">
    <div>
        <div class="fs-lg fw-medium mb-1">Company Invite</div>
        <div class="text-lead">Invite a new user to join your Issue Tracker company.</div>
    </div>
    <form asp-action="Create">
        <div class="row row-xs align-items-center mg-b-20 mt-3">
            <div class="col-md-4">
                <label class="mg-b-0">Email</label>
            </div>
            <div class="col-md-8 mg-t-5 mg-md-t-0">
                <input type="email" asp-for="InviteeEmail" class="form-control" placeholder="Enter email">
            </div>
        </div>
        <div class="row row-xs align-items-center mg-b-20 mt-3">
            <div class="col-md-4">
                <label class="mg-b-0">Firstname</label>
            </div>
            <div class="col-md-8 mg-t-5 mg-md-t-0">
                <input type="text" asp-for="InviteeFirstName" class="form-control" placeholder="Enter first name">
            </div>
        </div>
        <div class="row row-xs align-items-center mg-b-20 mt-3">
            <div class="col-md-4">
                <label class="mg-b-0">Lastname</label>
            </div>
            <div class="col-md-8 mg-t-5 mg-md-t-0">
                <input type="text" asp-for="InviteeLastName" class="form-control" placeholder="Enter last name">
            </div>
        </div>
        <div class="row row-xs align-items-center mg-b-20 mt-3">
            <div class="col-md-4">
                <label class="mg-b-0">Select Project</label>
            </div>
            <div class="col-md-8 mg-t-5 mg-md-t-0">
                <select class="form-control" asp-for="ProjectId" asp-items="@ViewBag.ProjectId">
                    <option value="">Select Project</option>
                </select>
            </div>
        </div>
        <div class="row row-xs align-items-center mg-b-20 mt-3">
            <div class="col-md-4">
                <label class="mg-b-0">Message</label>
            </div>
            <div class="col-md-8 mg-t-5 mg-md-t-0">
                <textarea asp-for="Message" multiple="multiple" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row justify-content-end mb-0 mt-3">
            <div class="col-md-8 pl-md-2">
                <input type="submit" class="btn btn-primary pd-x-30 mg-r-5 me-1" value="Send Invite" />
                <a asp-controller="Company" asp-action="Index" class="btn btn-danger pd-x-30">Cancel</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
