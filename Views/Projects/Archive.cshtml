@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Archive";
}

<div class="fs-2 fw-bold">Archive Project</div>
<div class="fs-4 fw-medium mt-3">Are you sure you want to archive this?</div>
<div class="box py-5 px-10 d-flex flex-column mt-3">
    <div class="fs-lg fw-medium">@Model.Name</div>
    <div class="text-lead mt-5">@Model.Description</div>
</div>

<form asp-action="Archive" asp-controller="Projects" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group d-flex mt-3">
        <input type="submit" value="Archive" class="btn btn-danger me-1" />
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark">Cancel</a>
    </div>
</form>
